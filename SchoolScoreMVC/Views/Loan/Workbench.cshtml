                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.AnnualCost)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>

                <td>

                    <a asp-action="BenefitCostAnalysis" asp-controller="Loan" asp-route-schoolId="@item.SchoolId">Run Benefit Analysis </a>



                </td>
            </tr>
        }
    </tbody>
</table>


