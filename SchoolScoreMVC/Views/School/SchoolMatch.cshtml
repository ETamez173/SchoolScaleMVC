@model SchoolScoreMVC.Models.SchoolViewModels.MatchingSchoolsViewModel
@{
    ViewData["Title"] = "School Match";
}

<h1>School Match</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@

        <tr class="table-success">
            <th scope="row">
                Degree / Program
            </th>
            <th>
                School
            </th>
            <th>
                State
            </th>

            <th>
                Yearly Cost
            </th>

            <th>
                Total Cost
            </th>
            <th>......</th>
            <th>Action</th>
        </tr>

    </thead>


    <tbody>
        @foreach (var item in Model.Schools)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => Model.DegreeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnnualCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>
                <td>
                </td>
                <td>



                    <a data-toggle="modal" data-target="#myModal">Details</a>

                    <a asp-action="CreateLoan" asp-controller="Loan" asp-route-schoolId="@item.SchoolId" asp-route-degreeId="@Model.DegreeId">Begin Analysis </a>



                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
